<?xml version="1.0" encoding="utf-8"?>
<com.udevel.bettershare.view.relativelayout.SquareRelativeLayout
    android:id="@+id/rl_share"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="@drawable/selector_button_share">

    <TextView
        android:id="@+id/tv_shareAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tv_share_appName_textColor_marginBot"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:singleLine="true"
        android:text="app name"
        android:textColor="@color/tv_share_appName_textColor"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_shareAppName"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/iv_share_padding"
        android:scaleType="centerInside" />
</com.udevel.bettershare.view.relativelayout.SquareRelativeLayout>